<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Tema de arranque (mientras Flutter inicia) -->
    <style name="LaunchTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@color/splash_background</item>
    </style>

    <!-- Tema normal (cuando Flutter ya está listo) -->
    <style name="NormalTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <item name="android:windowBackground">@android:color/white</item>
        <!-- Opcional: asegúrate de tener un colorPrimary/Secondary -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
    </style>
</resources>
